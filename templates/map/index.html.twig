{% extends 'base.html.twig' %}

{% block title %}Hello MapController!
{% endblock %}

{% block body %}


	<div class="conteneur-map">
		<div id="search-form">
			<form id="search" name="search" action="traitement.php" method="POST">
				<label for="species-select">Choisissez une espèce :</label>
				<select name="species" id="species-select">
					<option value="">--Choisissez ci-dessous--</option>
					<option value="humpback">Baleine à bosse</option>
					<option value="harbor porpoise">Marsouin</option>
					<option value="gray whale">Baleine grise</option>
					<option value="orca">Orque</option>
				</select>
				<label for="date">Choisissez une date :</label>
				<input type="date" id="date" name="until" min="2015-01-01" max="2032-12-31">
				<input type="submit" id="submit" value="Rechercher">
			</form>
		</div>
		<div id="map00"></div>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js" integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew==" crossorigin=""></script>
	{{ encore_entry_script_tags('app') }}
{% endblock %}
