{% extends 'base.html.twig' %}

{% block title %}Hello MapController!
{% endblock %}

{% block body %}


<div class="conteneur-map">
	<div id="search-form">
		<form id="search">
			<label class="label" for="species-select">Choisissez une espèce :</label>
			<select name="species" id="species-select">
				<option value="">--Choisissez ci-dessous--</option>
				<option value="humpback">Baleine à bosse</option>
				<option value="harborporpoise">Marsouin</option>
				<option value="graywhale">Baleine grise</option>
				<option value="orca">Orque</option>
			</select>
			{# <label class="label" for="date-select">Choisissez une date :</label> #}

			<p class="label">Choisissez une date :<input type="text" id="datepicker" value=""></p>
			<script>

			$( function() {
			  $( "#datepicker" ).datepicker();
			} );
			</script>

			{# <input type="date" id="date" name="date-select" min="2015-01-01" max="2032-12-31"> #}


			<button type="submit" id="submit">Rechercher</button>
		</form>
	</div>
	<div id="map00"></div>
</div>
{% endblock %}

